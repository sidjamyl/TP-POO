<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.202" xmlns:fx="http://javafx.com/fxml/1" fx:controller="transport.control.TicketListController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Transport Titles">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="titleCountLabel" text="Total: 0 titles" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="ticketsTable" prefHeight="400.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
            <TableColumn fx:id="ownerColumn" prefWidth="150.0" text="Owner" />
            <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Purchase Date" />
            <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price" />
            <TableColumn fx:id="validityColumn" prefWidth="80.0" text="Status" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
